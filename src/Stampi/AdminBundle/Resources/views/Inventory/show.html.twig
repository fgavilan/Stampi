{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Inventory</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Altered</th>
                <td>{{ entity.altered }}</td>
            </tr>
            <tr>
                <th>Signed</th>
                <td>{{ entity.signed }}</td>
            </tr>
            <tr>
                <th>Blocked</th>
                <td>{{ entity.blocked }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('inventory') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('inventory_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
