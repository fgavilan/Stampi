{%  set page = {'Title':'Game : ' ~ entity.gameI18n.first.name,'breadCrumbs': {'Home' : {'text':'Home','url':'/'},'Games' : {'text':'Games','url': url('game') } } } %}
{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Game</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            {% for gameI18n in entity.gameI18n %}
            <tr>
                <th>{{ gameI18n.language.name }}</th>
                <td>{{ gameI18n.name }} : {{ gameI18n.description }}</td>
            </tr>
            {% endfor %}
            <tr>
                <th>Publishdate</th>
                <td>{{ entity.publishDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>LogoImage</th>
                <td>{{ entity.logoImage }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('game') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('game_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
